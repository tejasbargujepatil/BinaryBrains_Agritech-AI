# Environment Variables for KrishiMitra Backend
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://krishimitra_user:your_password_here@localhost:5432/krishimitra
DB_PASSWORD=your_secure_password_here

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-change-this-too

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Server Configuration
PORT=8002
HOST=0.0.0.0

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Agent Configuration
ENABLE_AUTO_AGENTS=true
AGENT_UPDATE_INTERVAL=3600  # seconds
